
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%16thread] %-5level %30logger{30} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="de.fraunhofer.iosb.ilt.frostserver.parser.path" level="INFO"/>
    <logger name="de.fraunhofer.iosb.ilt.frostserver.parser.query" level="INFO"/>
    <logger name="de.fraunhofer.iosb.ilt.frostserver.json.deserialize.EntityParser" level="INFO"/>
    <logger name="de.fraunhofer.iosb.ilt.frostserver.settings.Settings" level="INFO"/>
    <logger name="com.querydsl" level="INFO"/>
    <logger name="org.jooq" level="INFO"/>
    <logger name="messageLogger" level="WARN"/>
    <logger name="io.moquette" level="WARN"/>
    <logger name="io.moquette.spi.impl.SessionsRepository" level="ERROR"/>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
