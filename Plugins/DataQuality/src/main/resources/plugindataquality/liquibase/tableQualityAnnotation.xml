    <changeSet author="scf" id="2024-04-01-QualityAnnotation-1" objectQuotingStrategy="QUOTE_ALL_OBJECTS">
        <preConditions onFail="MARK_RAN">
            <changeLogPropertyDefined property="id-QualityAnnotation" value="LONG" />
            <not>
                <tableExists tableName="QUALITY_ANNOTATION" />
            </not>
        </preConditions>
        <createTable tableName="QUALITY_ANNOTATION">
            <column name="ID" type="${idTypeLong}" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="QUALITY_ANNOTATION_PKEY" />
            </column>
        </createTable>
    </changeSet>

    <changeSet author="scf" id="2024-04-01-QualityAnnotation-2" objectQuotingStrategy="QUOTE_ALL_OBJECTS">
        <preConditions onFail="MARK_RAN">
            <or>
                <changeLogPropertyDefined property="id-QualityAnnotation" value="STRING" />
                <changeLogPropertyDefined property="id-QualityAnnotation" value="UUID" />
            </or>
            <not>
                <tableExists tableName="QUALITY_ANNOTATION" />
            </not>
        </preConditions>
        <createTable tableName="QUALITY_ANNOTATION">
            <column name="ID" type="${idType-QualityAnnotation}" defaultValueComputed="${defaultValueComputed-QualityAnnotation}">
                <constraints primaryKey="true" primaryKeyName="QUALITY_ANNOTATION_PKEY"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="scf" id="2024-04-01-QualityAnnotation-3" objectQuotingStrategy="QUOTE_ALL_OBJECTS">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists columnName="NAME" tableName="QUALITY_ANNOTATION" />
            </not>
        </preConditions>
        <addColumn tableName="QUALITY_ANNOTATION">
            <column name="SCHEME_ID" type="${idType-QualityScheme}">
                <constraints nullable="false"/>
            </column>
            <column name="SETUP_ID" type="${idType-QualitySetup}"/>
            <column name="MEASURE_ID" type="${idType-QualityMeasure}"/>
            <column name="RESULT_TYPE" type="TINYINT"/>
            <column name="RESULT_NUMBER" type="FLOAT8"/>
            <column name="RESULT_BOOLEAN" type="BOOLEAN"/>
            <column name="RESULT_JSON" type="JSONB"/>
            <column name="RESULT_STRING" type="TEXT"/>
            <column name="PROPERTIES" type="JSONB"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
